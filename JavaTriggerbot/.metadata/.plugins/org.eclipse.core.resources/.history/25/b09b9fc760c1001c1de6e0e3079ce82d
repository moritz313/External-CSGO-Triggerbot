			@Override
			public void actionPerformed(ActionEvent arg0) {
				
				if(Delay <= 8) {
					Delay++;
					Gui.this.delay.setText("Delay: " + Delay + "x");
					Gui.this.status.setText("Status: Changed Delay to " + Delay);
					
				}
				else if(Delay != 1){
					Delay = 1;
					Gui.this.delay.setText("Delay: " + Waves + "x");
					int k = Delay;
					Gui.this.status.setText("Status: Changed Delay to " + Delay);
				}
				
				System.out.print(Delay);
			}
        	
        });
        
      
