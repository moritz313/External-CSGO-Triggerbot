       this.autoPilot.addActionListener(new ActionListener() {
		
		@Override
		public void actionPerformed(ActionEvent e) {
			new Thread(() -> {
				
				 try {
					 Robot robot = new Robot();
					 robot.mouseMove(965, 545);   
					 TimeUnit.SECONDS.sleep(3);
					 Color color = robot.getPixelColor(965, 545);
						System.out.println("Red   = " + color.getRed());
						System.out.println("Green = " + color.getGreen());
						System.out.println("Blue  = " + color.getBlue());
						
						for(int i = 1; i > 0; i++) {
							Color color2 = robot.getPixelColor(965, 545);
							if(color.getRed() != color2.getRed() || color.getGreen() != color2.getGreen() || color.getBlue() != color2.getBlue()) {
								System.out.println("Shoot! ");
								robot.mousePress(InputEvent.BUTTON1_DOWN_MASK);
								robot.mouseRelease(InputEvent.BUTTON1_DOWN_MASK);
								i = -1;
							}

						
							
							}
				} catch (InterruptedException e2) {
				
					e2.printStackTrace();
				} catch (AWTException e1) {
					// TODO Auto-generated catch block
					e1.printStackTrace();
				}
				
				
				
			}).start();
			
			
		}
	});
        

